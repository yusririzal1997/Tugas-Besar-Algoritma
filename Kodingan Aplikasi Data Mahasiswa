    }                                       

    private void bhapusActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String npm = txtnpm.getText();
        String nama = txtnama.getText();
        try{
            Statement statement = (Statement) konek.getConnection().createStatement();
            statement.executeUpdate("delete from dt_mahasiswa where npm = '" + npm + "' OR nama ='" + nama + "';");
            JOptionPane.showMessageDialog(null, "Data Berhasil di Hapus");
            txtnpm.setText("");
            txtnama.setText("");
            cmbkel.setSelectedItem("A");
            cmbjk.setSelectedItem("Laki-laki");
            txtalamat.setText("");
            txtnpm.requestFocus();
        }catch (Exception t){
            JOptionPane.showMessageDialog(null, "Data Gagal di Hapus");
        }
        datatable();
    }                                      

    private void btambahActionPerformed(java.awt.event.ActionEvent evt) {                                        
        txtnpm.setText("");
        txtnama.setText("");
        txtalamat.setText("");
        cmbkel.setSelectedItem("A");
        cmbjk.setSelectedItem("Laki-laki");
        txtnpm.requestFocus();
    }                                       

    private void bkeluarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        dispose();
    }                                       

    private void bsimpanActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String npm = txtnpm.getText();
        String nama = txtnama.getText();
        String kelas = (String) cmbkel.getSelectedItem();
        String jk = (String) cmbjk.getSelectedItem();
        String alamat = txtalamat.getText();

    try{
        Statement statement = (Statement) konek.getConnection().createStatement();
        statement.executeUpdate("insert into dt_mahasiswa VALUES ('" + npm + "','" + nama +"','"+ kelas +"','"+ jk +"','"+ alamat +"');");
        statement.close();
        JOptionPane.showMessageDialog(null, "Data Berhasil disimpan");
    }catch (Exception t){
        JOptionPane.showMessageDialog(null, "Data Gagal Disimpan");
    }
    datatable();
    }                                       

    private void beditActionPerformed(java.awt.event.ActionEvent evt) {                                      
        if(bedit.getText() == "bedit"){
           txtnpm.requestFocus();
        }else{
            String npm = txtnpm.getText();
            String nama = txtnama.getText();
            String kelas = (String) cmbkel.getSelectedItem();
	    String jk = (String) cmbjk.getSelectedItem();
            String alamat = txtalamat.getText();
            
        try{
            Statement statement = (Statement) konek.getConnection().createStatement();
            statement.executeUpdate("update dt_mahasiswa SET npm='"+npm+"',"+"nama='"+nama+"',
		"+"kelas='"+kelas+"',"+"jk='"+jk+"',"+"alamat='"+alamat+"'" + " WHERE npm = '"+npm+"' OR nama = '"+nama+"'");
            statement.close();
            JOptionPane.showMessageDialog(null, "Data Berhasil diubah");
        }catch (Exception t){
            JOptionPane.showMessageDialog(null, "Data Gagal diubah");
        }
        datatable();
        }
    }                                     

    private void bcariActionPerformed(java.awt.event.ActionEvent evt) {                                      
        try{
            Statement statement = (Statement) konek.getConnection().createStatement();
            ResultSet res = statement.executeQuery("Select * from dt_mahasiswa where "+"npm like'%" + txtnpm.getText() + "%' OR 
			"+"nama like'%" + txtnama.getText() + "%'");
            DefaultTableModel tbl = new DefaultTableModel();
                tbl.addColumn("NPM");
                tbl.addColumn("Nama");
                tbl.addColumn("Kelas");
                tbl.addColumn("Jenis Kelamin");
                tbl.addColumn("Alamat");
                
                table.setModel(tbl);
                while (res.next()){
                    tbl.addRow(new Object[]{
                        res.getString("npm"),
                        res.getString("nama"),
                        res.getString("kelas"),
                        res.getString("jk"),
                        res.getString("alamat"),
                    });
                    table.setModel(tbl);
                }
            
        }catch (Exception e){
            JOptionPane.showMessageDialog(rootPane, "Error");
        }
    }                                     

    private void tableMouseClicked(java.awt.event.MouseEvent evt) {                                   
        int i = table.getSelectedRow();
if (i == -1){
	return;
}
	String npm = (String) table.getValueAt(i, 0);
	txtnpm.setText(npm);
	String nama = (String) table.getValueAt(i, 1);
	txtnama.setText(nama);
	String kelas = (String) table.getValueAt(i, 2);
	cmbkel.setSelectedItem(kelas);
	String jk = (String) table.getValueAt(i, 3);
	cmbjk.setSelectedItem(jk);
	String alamat = (String) table.getValueAt(i, 4);
	txtalamat.setText(alamat);
    }                                  

